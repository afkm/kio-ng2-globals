{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "rxjs": [
        "../node_modules/rxjs/*"
      ]
    }    
  },

  "files": [
    "build/module.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
 }
}